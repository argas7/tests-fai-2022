{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "moduleResolution": "node",
    "outDir": "dist/",
    "baseUrl": "src",
    "sourceMap": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "@/*": ["*"]
    }
  }
}